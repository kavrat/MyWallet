

<div class="row">
    <div class="col-md-6">
        <div class="card mb-3">
            <div class="card-header bg-success text-white"><i class="fa fa-plus"></i> Revenues</div>
            <div class="card-body">
                <table class="table" cellpadding="0">
                    <tr class="row">
                        <td class="col-md-8">
                            <input class="form-control" type="text" placeholder="New revenue...">
                        </td>
                        <td class="col-md-4">
                            <button class="btn btn-primary" type="button">Add</button>
                        </td>
                    </tr>
                    @Html.Action("TypeList", new { type = 1 /*revenue type*/})
                </table>
            </div>
        </div>

    </div>
    <div class="col-md-6">
        <div class="card mb-3">
            <div class="card-header bg-primary text-white"><i class="fa fa-minus"></i> Expenses</div>
            <div class="card-body">
                <table class="table" cellpadding="0">
                    <tr class="row">
                        <td class="col-md-8">
                            <input class="form-control" type="text" placeholder="New expense...">
                        </td>
                        <td class="col-md-4">
                            <button class="btn btn-primary" type="button">Add</button>
                        </td>
                    </tr>
                    @Html.Action("TypeList", new { type = 2 /*expense type*/})
                </table>
            </div>
        </div>
    </div>
</div>
